---
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="KDA Sporting Club - Site officiel" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - KDA Sporting Club</title>
  </head>
  <body class="min-h-screen flex flex-col bg-gray-100 font-poppins">
    <Navigation />
    <main class="flex-grow container mx-auto px-4 py-8 mt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>